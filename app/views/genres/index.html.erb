<section class="section">
  <div class="container">
    <h1 class="heading">Genres</h1>
    <%= link_to 'New genre', new_genre_path, class: "button button--primary fit-content" %>

    <div class="table-container">
      <table>
        <thead>
          <tr>
            <th scope="col">Name</th>
            <th scope="colgroup" colspan="3">Actions</th>
          </tr>
        </thead>

        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td><%= link_to 'Show', genre %></td>
              <td><%= link_to 'Edit', edit_genre_path(genre) %></td>
              <td><%= link_to 'Destroy', genre, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</section>
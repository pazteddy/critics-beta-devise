<section class="section">
  <div class="container">
    <h1 class="heading">Select the criticable</h1>

    <%= form_with(url: new_critic_path, method: :get, class: "flex flex-column gap-4 flex-row") do |form| %>
      <div class="flex gap-4">
        <div class="select">
          <%= form.label :game_id, class:"content-xs overline"%>
          <%= form.collection_select :game_id, Game.all, :id, :name, { prompt: true }, { class: "select__input" } %>
        </div>
      </div>
      <%= form.submit "Critic this game", class: "button button--primary fit-content" %>
    <% end %>

    <%= form_with(url: new_critic_path, method: :get, class: "flex flex-column gap-4 flex-row") do |form| %>
      <div class="flex gap-4">
        <div class="select">
          <%= form.label :company_id, class:"content-xs overline"%>
          <%= form.collection_select :company_id, Company.all, :id, :name, { prompt: true }, { class: "select__input" } %>
        </div>
      </div>
      <%= form.submit "Critic this company", class: "button button--primary fit-content" %>
    <% end %>


    <%= link_to 'Back', critics_path %>
  </div>
</section>
<%= form_with(model: critic) do |form| %>
  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :body %>
    <%= form.text_area :body %>
  </div>

  <div class="field">
    <%= form.label :user_id %>
    <%= form.text_field :user_id %>
  </div>

  <div class="field">
    <%= form.label :criticable_id %>
    <%= form.text_field :criticable_id %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

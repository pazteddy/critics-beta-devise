<section class="section">
  <div class="container">
    <h1 class="heading">Critics</h1>
    <%= link_to 'New critic', new_critic_path, class: "button button--primary fit-content" %>

    <div class="table-container">
      <table>
        <thead>
          <tr>
            <th scope="col">Title</th>
            <th scope="col">User</th>
            <th scope="col">Criticable Type</th>
            <th scope="col">Criticable Name</th>
            <th scope="colgroup" colspan="3">Actions</th>
          </tr>
        </thead>

        <tbody>
          <% @critics.each do |critic| %>
            <tr>
              <td><%= critic.title %></td>
              <td><%= critic.user.username %></td>
              <td><%= critic.criticable_type %></td>
              <td><%= critic.criticable.name %></td>
              <td><%= link_to 'Show', critic %></td>
              <td><%= link_to 'Edit', edit_critic_path(critic) %></td>
              <td><%= link_to 'Destroy', critic, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</section>